<html class="show_page">
<div class="show_page">

  <h3><%= "Reviewer: #{@user.username}" %></h3>
  <div class="reviews_sort">
    <li class="item"><%= link_to "sort reviews newest first", user_path(@user, sort: "reviews_newest") %></li>
    <br>
    <li class="item"><%= link_to "sort reviews oldest first", user_path(@user, sort: "reviews_oldest") %></li>
  </div>
  <% @user.reviews.each do |review| %>
  <ul>

    <li><%= "Book Reviewed: #{review.book.title}" %></li>
    <br>
    <li><%= "Review Title: #{review.title}" %></li>
    <br>
    <li><%= "Review: #{review.body}" %></li>
    <br>
    <li><%= "Rating: #{review.rating}" %></li>
    <br>
    <li>Created at: <%= review.created_at.strftime("%B %d, %Y") %></li>
    <br>
  </ul>
  <br>
  <br>
  <%= link_to "Delete Review", review_path(review), method: :delete %>
  <br>
  <br>
  <br>
  <% end %>

</div>
</html>
