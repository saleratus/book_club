Single Book

<%= @book.title %>
<%= @book.pages %>
<%= @book.year %>
<% @book.authors.each do |author| %>
<p><%= link_to "#{author.name}", author_path(author) %></p>
<% end %>

<% @book.reviews.each do |review| %>
<ul>
  <h3><li><%= review.title %></li></h3>
  <li><%= link_to review.user.username, user_path(review.user) %></li>
  <li><%= review.rating %></li>
  <li><%= review.body %></li>
</ul>
<% end %>
